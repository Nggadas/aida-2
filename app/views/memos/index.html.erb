<p id="notice"><%= notice %></p>


<div class="row">
  <div class="large-4 columns">
    <h1>Memos</h1>
    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @memos.each do |memo| %>
          <tr>
            <td><%= memo.title %></td>
            <td><%= memo.content %></td>
            <td><%= link_to 'Show', memo, class: "button"%></td>
            <td><%= link_to 'Edit', edit_memo_path(memo), class: "success button" %></td>
            <td><%= link_to 'Destroy', memo, method: :delete, data: { confirm: 'Are you sure?' }, class: "alert button" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Memo', new_memo_path, class: "success button" %>
  </div>
</div>
